                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Reiniciar" HorizontalAlignment="Left" Margin="467,150,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Click="btn_Reset_click" Height="23" Width="61">
