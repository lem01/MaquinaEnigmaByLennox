                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Arriba" HorizontalAlignment="Left" Margin="285,3,0,0" VerticalAlignment="Top" FontWeight="Bold" Click="Bnt_arriba_R3_click" Grid.Row="1" Height="20" Width="39">
